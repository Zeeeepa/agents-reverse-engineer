{
  "statusLine": {
    "type": "command",
    "command": "node .claude/hooks/gsd-statusline.js"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/are-check-update.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/are-context-loader.js"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npx are init*)",
      "Bash(npx are discover*)",
      "Bash(npx are generate*)",
      "Bash(npx are update*)",
      "Bash(npx are specify*)",
      "Bash(npx are rebuild*)",
      "Bash(npx are clean*)",
      "Bash(npx are dashboard*)",
      "Bash(rm -f .agents-reverse-engineer/progress.log*)",
      "Bash(sleep *)"
    ]
  }
}